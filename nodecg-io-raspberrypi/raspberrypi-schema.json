{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "pins": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "description": "GPIO pin id as described on https://pinout.xyz"
                    },
                    "mode": {
                        "type": "string",
                        "enum": ["in", "out", "high", "low"],
                        "description": "GPIO pin mode"
                    },
                    "edge": {
                        "type": "string",
                        "enum": ["none", "rising", "falling", "both"],
                        "description": "GPIO pin edge mode"
                    }
                },
                "required": ["id", "mode"]
            },
            "description": "GPIO pins that are used by nodecg-io"
        }
    },
    "required": ["pins"]
}
